<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/category_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical"
    android:padding="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp"
    app:contentPadding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="70dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/category_item_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="10dp"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:src="@drawable/homepage_header" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/category_item_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:lineSpacingMultiplier="1.2"
                android:maxLines="2"
                android:text="生活垃圾分类是城市文明的一个缩影。对于个人来说,垃圾分类是举手之劳,但对于这座城市来说,当每个人都能做到垃圾分类时,这个城市的文明才会慢慢呈现。"
                android:textColor="@color/category_text"
                android:textSize="16sp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">


                <TextView
                    android:id="@+id/category_item_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="昆明市人民政府"
                    android:textAllCaps="false"
                    android:textColor="@color/category_text2"
                    android:textSize="13sp" />


                <TextView
                    android:id="@+id/category_item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text="2019-07-04"
                    android:textAllCaps="false"
                    android:textColor="@color/category_text2"
                    android:textSize="13sp" />

            </RelativeLayout>
        </RelativeLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>